<Window x:Class="PrisonManagement.Views.Pages.ThamGapDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin Thăm gặp" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
        <TextBlock x:Name="txtTitle" 
                   Text="Thêm lượt thăm gặp" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#1e3a5f" 
                   Margin="0,0,0,20"/>
        
        <TextBlock Text="Phạm nhân *" Margin="0,0,0,5"/>
        <ComboBox x:Name="cboPhamNhan" 
                  Height="35" 
                  DisplayMemberPath="HoTen" 
                  SelectedValuePath="Id"/>
        
        <TextBlock Text="Ngày thăm *" Margin="0,15,0,5"/>
        <DatePicker x:Name="dpNgayThamGap" Height="35"/>
        
        <TextBlock Text="Người thăm *" Margin="0,15,0,5"/>
        <TextBox x:Name="txtNguoiThamGap" Height="35"/>
        
        <TextBlock Text="Quan hệ" Margin="0,15,0,5"/>
        <TextBox x:Name="txtQuanHe" Height="35"/>
        
        <TextBlock Text="CMND" Margin="0,15,0,5"/>
        <TextBox x:Name="txtCMND" Height="35"/>
        
        <TextBlock Text="Nội dung tiếp tế" Margin="0,15,0,5"/>
        <TextBox x:Name="txtNoiDungTiepTe" 
                 Height="60" 
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
        
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,30,0,0">
            <Button Content="Hủy" 
                    Width="100" 
                    Height="40" 
                    Margin="0,0,10,0" 
                    Background="#e0e0e0" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnCancel_Click"/>
            <Button Content="Lưu" 
                    Width="100" 
                    Height="40" 
                    Background="#3182ce" 
                    Foreground="White" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnSave_Click"/>
        </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
