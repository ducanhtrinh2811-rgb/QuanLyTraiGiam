<Window x:Class="PrisonManagement.Views.Pages.PhamNhanDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin Phạm nhân" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock x:Name="txtTitle" Text="Thêm phạm nhân mới" 
                       FontSize="20" FontWeight="Bold" Foreground="#1e3a5f"
                       Margin="0,0,0,20"/>

            <!-- Họ tên -->
            <TextBlock Text="Họ tên *" Margin="0,0,0,5"/>
            <TextBox x:Name="txtHoTen" Height="35" Padding="10,5" FontSize="14"/>

            <!-- Ngày sinh -->
            <TextBlock Text="Ngày sinh *" Margin="0,15,0,5"/>
            <DatePicker x:Name="dpNgaySinh" Height="35"/>

            <!-- Giới tính -->
            <TextBlock Text="Giới tính *" Margin="0,15,0,5"/>
            <ComboBox x:Name="cboGioiTinh" Height="35">
                <ComboBoxItem Content="Nam"/>
                <ComboBoxItem Content="Nữ"/>
            </ComboBox>

            <!-- Quê quán -->
            <TextBlock Text="Quê quán" Margin="0,15,0,5"/>
            <TextBox x:Name="txtQueQuan" Height="35" Padding="10,5" FontSize="14"/>

            <!-- Tội danh -->
            <TextBlock Text="Tội danh *" Margin="0,15,0,5"/>
            <TextBox x:Name="txtToiDanh" Height="35" Padding="10,5" FontSize="14"/>

            <!-- Mức độ nguy hiểm -->
            <TextBlock Text="Mức độ nguy hiểm *" Margin="0,15,0,5"/>
            <ComboBox x:Name="cboMucDoNguyHiem" Height="35">
                <ComboBoxItem Content="Thấp"/>
                <ComboBoxItem Content="Trung bình"/>
                <ComboBoxItem Content="Cao"/>
                <ComboBoxItem Content="Đặc biệt"/>
            </ComboBox>

            <!-- Ngày vào trại -->
            <TextBlock Text="Ngày vào trại *" Margin="0,15,0,5"/>
            <DatePicker x:Name="dpNgayVaoTrai" Height="35"/>

            <!-- Trạng thái -->
            <TextBlock Text="Trạng thái *" Margin="0,15,0,5"/>
            <ComboBox x:Name="cboTrangThai" Height="35">
                <ComboBoxItem Content="Đang thụ án"/>
                <ComboBoxItem Content="Tạm giam"/>
                <ComboBoxItem Content="Đã mãn hạn"/>
                <ComboBoxItem Content="Chuyển trại"/>
            </ComboBox>

            <!-- Ghi chú -->
            <TextBlock Text="Ghi chú" Margin="0,15,0,5"/>
            <TextBox x:Name="txtGhiChu" Height="80" Padding="10,5" FontSize="14"
                     TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="Hủy" Width="100" Height="40" Margin="0,0,10,0"
                        Background="#e0e0e0" BorderThickness="0" FontSize="14"
                        Click="BtnCancel_Click" Cursor="Hand"/>
                <Button x:Name="btnSave" Content="Lưu" Width="100" Height="40"
                        Background="#3182ce" Foreground="White" 
                        BorderThickness="0" FontSize="14"
                        Click="BtnSave_Click" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
