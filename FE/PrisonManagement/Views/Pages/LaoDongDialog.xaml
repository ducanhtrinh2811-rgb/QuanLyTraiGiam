<Window x:Class="PrisonManagement.Views.Pages.LaoDongDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin Lao động" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
        <TextBlock x:Name="txtTitle" 
                   Text="Thêm hoạt động lao động" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#1e3a5f" 
                   Margin="0,0,0,20"/>
        
        <TextBlock Text="Phạm nhân *" Margin="0,0,0,5"/>
        <ComboBox x:Name="cboPhamNhan" 
                  Height="35" 
                  DisplayMemberPath="HoTen" 
                  SelectedValuePath="Id"/>
        
        <TextBlock Text="Tên hoạt động *" Margin="0,15,0,5"/>
        <TextBox x:Name="txtTenHoatDong" Height="35"/>
        
        <TextBlock Text="Loại hoạt động" Margin="0,15,0,5"/>
        <ComboBox x:Name="cboLoaiHoatDong" Height="35">
            <ComboBoxItem Content="Lao Động" IsSelected="True"/>
            <ComboBoxItem Content="Học Tập"/>
        </ComboBox>
        
        <TextBlock Text="Ngày bắt đầu *" Margin="0,15,0,5"/>
        <DatePicker x:Name="dpNgayBatDau" Height="35"/>
        
        <TextBlock Text="Ngày kết thúc" Margin="0,15,0,5"/>
        <DatePicker x:Name="dpNgayKetThuc" Height="35"/>
        
        <TextBlock Text="Đánh giá" Margin="0,15,0,5"/>
        <ComboBox x:Name="cboDanhGia" Height="35">
            <ComboBoxItem Content="Tốt"/>
            <ComboBoxItem Content="Khá"/>
            <ComboBoxItem Content="Trung Bình"/>
            <ComboBoxItem Content="Yếu"/>
        </ComboBox>
        
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,30,0,0">
            <Button Content="Hủy" 
                    Width="100" 
                    Height="40" 
                    Margin="0,0,10,0" 
                    Background="#e0e0e0" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnCancel_Click"/>
            <Button Content="Lưu" 
                    Width="100" 
                    Height="40" 
                    Background="#3182ce" 
                    Foreground="White" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnSave_Click"/>
        </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
