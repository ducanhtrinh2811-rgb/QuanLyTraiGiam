<Window x:Class="PrisonManagement.Views.Pages.PhongGiamDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin Phòng giam" 
        Height="450" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock x:Name="txtTitle" Text="Thêm phòng giam mới" 
                       FontSize="20" FontWeight="Bold" Foreground="#1e3a5f"
                       Margin="0,0,0,20"/>

            <!-- Mã phòng -->
            <TextBlock Text="Mã phòng *" Margin="0,0,0,5"/>
            <TextBox x:Name="txtMaPhong" Height="35" Padding="10,5" FontSize="14"/>

            <!-- Tên phòng -->
            <TextBlock Text="Tên phòng *" Margin="0,15,0,5"/>
            <TextBox x:Name="txtTenPhong" Height="35" Padding="10,5" FontSize="14"/>

            <!-- Loại phòng -->
            <TextBlock Text="Loại phòng" Margin="0,15,0,5"/>
            <ComboBox x:Name="cboLoaiPhong" Height="35">
                <ComboBoxItem Content="Thường"/>
                <ComboBoxItem Content="Đặc biệt"/>
                <ComboBoxItem Content="Cách ly"/>
            </ComboBox>

            <!-- Sức chứa -->
            <TextBlock Text="Sức chứa *" Margin="0,15,0,5"/>
            <TextBox x:Name="txtSucChua" Height="35" Padding="10,5" FontSize="14"/>

            <!-- Trạng thái -->
            <TextBlock Text="Trạng thái" Margin="0,15,0,5"/>
            <ComboBox x:Name="cboTrangThai" Height="35">
                <ComboBoxItem Content="HoatDong" IsSelected="True"/>
                <ComboBoxItem Content="BaoTri"/>
                <ComboBoxItem Content="DaKhoa"/>
            </ComboBox>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="Hủy" Width="100" Height="40" Margin="0,0,10,0"
                        Background="#e0e0e0" BorderThickness="0" FontSize="14"
                        Click="BtnCancel_Click" Cursor="Hand"/>
                <Button x:Name="btnSave" Content="Lưu" Width="100" Height="40"
                        Background="#3182ce" Foreground="White" 
                        BorderThickness="0" FontSize="14"
                        Click="BtnSave_Click" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
