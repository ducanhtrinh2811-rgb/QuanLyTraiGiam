<Window x:Class="PrisonManagement.Views.Pages.SucKhoeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin Sức khỏe" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
        <TextBlock x:Name="txtTitle" 
                   Text="Thêm bản ghi sức khỏe" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#1e3a5f" 
                   Margin="0,0,0,20"/>
        
        <TextBlock Text="Phạm nhân *" Margin="0,0,0,5"/>
        <ComboBox x:Name="cboPhamNhan" 
                  Height="35" 
                  DisplayMemberPath="HoTen" 
                  SelectedValuePath="Id"/>
        
        <TextBlock Text="Ngày khám *" Margin="0,15,0,5"/>
        <DatePicker x:Name="dpNgayKham" Height="35"/>
        
        <TextBlock Text="Loại khám" Margin="0,15,0,5"/>
        <ComboBox x:Name="cboLoaiKham" Height="35">
            <ComboBoxItem Content="DinhKy" IsSelected="True"/>
            <ComboBoxItem Content="DotXuat"/>
            <ComboBoxItem Content="NhapVien"/>
        </ComboBox>
        
        <TextBlock Text="Chẩn đoán" Margin="0,15,0,5"/>
        <TextBox x:Name="txtChanDoan" Height="35" Padding="10,5"/>
        
        <TextBlock Text="Điều trị" Margin="0,15,0,5"/>
        <TextBox x:Name="txtDieuTri" Height="35" Padding="10,5"/>
        
        <TextBlock Text="Bác sĩ" Margin="0,15,0,5"/>
        <TextBox x:Name="txtBacSi" Height="35" Padding="10,5"/>
        
        <TextBlock Text="Ghi chú" Margin="0,15,0,5"/>
        <TextBox x:Name="txtGhiChu" 
                 Height="60" 
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
        
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,30,0,0">
            <Button Content="Hủy" 
                    Width="100" 
                    Height="40" 
                    Margin="0,0,10,0" 
                    Background="#e0e0e0" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnCancel_Click"/>
            <Button Content="Lưu" 
                    Width="100" 
                    Height="40" 
                    Background="#3182ce" 
                    Foreground="White" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnSave_Click"/>
        </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
