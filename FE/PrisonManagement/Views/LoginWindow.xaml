                           HorizontalAlignment="Center" Foreground="#1e3a5f"/>
                <TextBlock Text="Tráº¡i giam" FontSize="18" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#1e3a5f" Margin="0,0,0,25"/>
                
                <!-- Username -->
                <TextBlock Text="TÃªn Ä‘Äƒng nháº­p" Margin="0,0,0,5" Foreground="#666"/>
                <TextBox x:Name="txtUsername" Style="{StaticResource RoundedTextBox}"/>
                
                <!-- Password -->
                <TextBlock Text="Máº­t kháº©u" Margin="0,15,0,5" Foreground="#666"/>
                <PasswordBox x:Name="txtPassword" Style="{StaticResource RoundedPasswordBox}"/>
                
                <!-- Error Message -->
                <TextBlock x:Name="txtError" Foreground="Red" FontSize="12" 
                           Margin="0,10,0,0" TextWrapping="Wrap" MinHeight="18"/>
                
                <!-- Login Button -->
                <Button x:Name="btnLogin" Content="ÄÄƒng nháº­p" 
                        Margin="0,15,0,0" 
