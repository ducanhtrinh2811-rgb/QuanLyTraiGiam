<Window x:Class="PrisonManagement.Views.Pages.SuCoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin Sự cố" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock x:Name="txtTitle" 
                       Text="Thêm sự cố" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#1e3a5f" 
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Ngày xảy ra *" Margin="0,0,0,5"/>
            <DatePicker x:Name="dpNgayXayRa" Height="35"/>
            
            <TextBlock Text="Loại sự cố" Margin="0,15,0,5"/>
            <ComboBox x:Name="cboLoaiSuCo" Height="35">
                <ComboBoxItem Content="AnNinh"/>
                <ComboBoxItem Content="YTe"/>
                <ComboBoxItem Content="ChayNo"/>
                <ComboBoxItem Content="TronTrai"/>
                <ComboBoxItem Content="Khac" IsSelected="True"/>
            </ComboBox>
            
            <TextBlock Text="Mô tả *" Margin="0,15,0,5"/>
            <TextBox x:Name="txtMoTa" 
                     Height="80" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
            
            <TextBlock Text="Mức độ" Margin="0,15,0,5"/>
            <ComboBox x:Name="cboMucDo" Height="35">
                <ComboBoxItem Content="Nhe" IsSelected="True"/>
                <ComboBoxItem Content="Vua"/>
                <ComboBoxItem Content="NghiemTrong"/>
            </ComboBox>
            
            <TextBlock Text="Phạm nhân liên quan" Margin="0,15,0,5"/>
            <TextBox x:Name="txtPhamNhanLienQuan" Height="35"/>
            
            <TextBlock Text="Biện pháp xử lý" Margin="0,15,0,5"/>
            <TextBox x:Name="txtBienPhapXuLy" 
                     Height="60" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
            
            <TextBlock Text="Người báo cáo" Margin="0,15,0,5"/>
            <TextBox x:Name="txtNguoiBaoCao" Height="35"/>
            
            <TextBlock Text="Trạng thái" Margin="0,15,0,5"/>
            <ComboBox x:Name="cboTrangThai" Height="35">
                <ComboBoxItem Content="DangXuLy" IsSelected="True"/>
                <ComboBoxItem Content="DaXuLy"/>
                <ComboBoxItem Content="TheoDoi"/>
            </ComboBox>
            
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,30,0,0">
                <Button Content="Hủy" 
                        Width="100" 
                        Height="40" 
                        Margin="0,0,10,0" 
                        Background="#e0e0e0" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnCancel_Click"/>
                <Button Content="Lưu" 
                        Width="100" 
                        Height="40" 
                        Background="#3182ce" 
                        Foreground="White" 
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
