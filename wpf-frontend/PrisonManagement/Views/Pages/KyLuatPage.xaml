<Page x:Class="PrisonManagement.Views.Pages.KyLuatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý Kỷ luật">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="⚠️ Quản lý Kỷ luật" FontSize="28" 
                   FontWeight="Bold" Foreground="#1e3a5f" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10">
            <DataGrid x:Name="dgKyLuat" AutoGenerateColumns="False" 
                      IsReadOnly="True" CanUserAddRows="False"
                      GridLinesVisibility="Horizontal" BorderThickness="0" RowHeight="45">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Phạm nhân" Binding="{Binding PhamNhanTen}" Width="150"/>
                    <DataGridTextColumn Header="Ngày vi phạm" Binding="{Binding NgayViPham, StringFormat=dd/MM/yyyy}" Width="110"/>
                    <DataGridTextColumn Header="Loại vi phạm" Binding="{Binding LoaiViPham}" Width="150"/>
                    <DataGridTextColumn Header="Hình thức xử lý" Binding="{Binding HinhThucXuLy}" Width="180"/>
                    <DataGridTextColumn Header="Ghi chú" Binding="{Binding GhiChu}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
